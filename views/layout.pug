block variables
doctype html
html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/favicon.ico")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css",rel="stylesheet",integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We",crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js",integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj",crossorigin="anonymous")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
  body(style="background-image: url(\"book-wallpaper.jpg\");background-size:cover")
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      div.container-fluid
        a.navbar-brand(href="/") BookManager
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.ms-5.collapse.navbar-collapse(id="navbarNavDropdown")
          ul.navbar-nav
            li.nav-item
              a.nav-link.active(aria-current="page" href="/") Home
            li.nav-item
              a.nav-link.active(aria-current="page" href="/books") Books
    if msg
      .row.p-2.bg-warning
        small #{msg}
    div.root
      block layout-content